.container-activity
    display: flex
    padding: 0 2em
    justify-content: center
    align-items: center
    & .activity
        max-width max_width_actividades
        padding: 2em
        @media screen and (max-width 425px)
                padding: .5em
    @media screen and (max-width 425px)
        display: block
                
        & h1
            margin-top: 0
            @media screen and (max-width 425px)
                font-size: 1.5em
.activity_pregunta_scroll_container
    overflow hidden 
    scroll-behavior: smooth
    width: 100%
.activity_pregunta_scroll
    display flex
    flex-wrap: nowrap 
.activity_pregunta
    min-width: 100%  
.enunciado
    font-size: 1.5em
    color: colorBlue
    margin-bottom: 4em
    @media screen and (max-width 425px)
                font-size: 1em

.respuesta
    margin-bottom: 1em
    color:colorGrey
    font-size: 1em
    transition: .5s
    @media screen and (max-width 425px)
                padding: 1em
    &:hover
       
        background: colorBlue
        transform: scale(1.05)
        color:white
    &:focus
        background: colorBlue
        color:white

.container-respuestas
    margin-bottom: 1em
    display grid
    grid-template-columns: .5fr 1fr
.container-validacion
    display: grid;
    grid-template-columns: repeat(3,1fr);
    grid-template-areas: 'comprobar . siguiente'
    column-gap: 5em;
    border-top: 1px solid color_GreyLight
    padding-top: 2em
    @media screen and (max-width 425px)
        grid-template-columns: repeat(1,1fr);
        grid-template-areas: 'comprobar''siguiente';
        row-gap: 1em

.comprobar
    grid-area: comprobar
    color:colorGrey

.siguiente
    grid-area: siguiente
.container-opciones
    max-width 12em
    background: color_GreyLight
    color: white;
    border-radius: 5px;
    display: grid;
    color colorGrey
    font-weight: bold
    transition: .5s all
    max-height: 4.3em
    & .opcion
        padding: 1em;
        text-align: center
        display: none
        cursor pointer
        z-index: 2
        background: color_GreyLight
        &:last-child
            border-radius: 0 0 5px 5px 
        &:hover
            background-color colorBlue
            color white
        &:last-child:hover 
            border-radius:  0 0 5px 5px;
    & .pordefecto
        display: block
        transition: .5s all
        cursor pointer
        text-align: left
        display flex
        align-items: center
        justify-content: space-around
        padding: .5em
        & .icon_seleccione
            width: 16px
            height auto
            transition: .5s all
    &:hover .pordefecto
            background: #DADADA
            border-radius: 5px 5px 0 0
    &:hover .icon_seleccione
        transform: rotate(180deg)
    &:hover .opcion
         display block
    & input[type="radio"]
        appearance none
        margin 0
        border none
        outline: none

input:checked + .opcion
    background colorBlue
    color white




.img_pregunta
    width: 100%
    height : auto
    max-height: 27em
.container-img-text
    text-align: center







    

